<!DOCTYPE html>
<html>
  <%- include('../../partials/head') %>
  <body>
    <%- include('../../partials/header') %>
    <%- include('../../partials/nav') %>
    <main id="content">
        <div class="container">
            <form class="form-group" action="/editProduct/<%= product.id %>" method="post">
                <div class="form-group-6">
                    <label for="name" class="form-label">Nombre</label>
                    <input class="form-control" type="text" value="<%= product.name %>" name="name" id="name" required>
                </div>
                <div class="form-group-6">
                    <label for="amount" class="form-label">Precio</label>
                    <input class="form-control" type="text" value="<%= product.amount %>" name="amount" id="amount" required>
                </div>
                <div class="form-group-6">   
                    <label for="stock" class="form-label">Cantidad</label>
                    <input class="form-control" type="number" value="<%= product.stock %>" name="stock" id="stock" required>
                </div>
                <div class="form-group-6">
                    <label for="url" class="form-label">Imagen</label>
                    <input class="form-control" type="url" value="<%= product.url %>" name="url" id="url">
                </div>
                <button type="submit" class="mt-1 btn btn-add">Guardar cambios</button>
                <a class="mt-1 btn btn-delete" href="/adminProduct">Cancelar</a>
            </form>
        </div>
    </main>
    <%- include('../../partials/footer') %>
  </body>
</html>